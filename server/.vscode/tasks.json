{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile",
      "type": "shell",
      "command": "npm",
      "presentation": {
        "reveal": "silent",
        "clear": true
      },
      "args": [
        "run-script",
        "compile"
      ],
      "problemMatcher": "$tsc-watch",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch",
      "type": "shell",
      "command": "npm",
      "presentation": {
        "reveal": "silent",
        "clear": true
      },
      "args": [
        "run-script",
        "watch"
      ],
      "problemMatcher": "$tsc-watch",
      "isBackground": true
    }
  ]
}